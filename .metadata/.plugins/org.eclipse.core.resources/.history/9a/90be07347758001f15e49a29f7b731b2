<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mapper.BoardMapper">

	<select id="selectBoardList" resultType="com.board.dto.BoardDTO">
		select
			id, title, hit, created_at
		from
			board_tbl
		where
			is_deleted = "n"
	</select>
	
	<insert id="insertBoard" parameterType="com.board.dto.BoardDTO">
		insert into
			board_tbl
			(title, content, created_at, creator)
		values
			(#{title}, #{content}, now(), "유현준")
	</insert>
	
	<select id="selectBoardById" resultType="com.board.dto.BoardDTO" parameterType="int">
		select 
			id, title, content, hit, DATE_FORMAT(created_at, '%Y.%m.%d %H:%i:%s') as created_at, creator
		from
			board_tbl
		where 
			id = #{id}
				and
			is_deleted = "n"
	</select>
	
	
	
	
</mapper>
